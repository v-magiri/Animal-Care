<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5.7"
        android:layout_marginVertical="5dp"
        android:id="@+id/animalItemLayout"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/ic_vet"
            android:id="@+id/animalImage"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/animalNameTxt"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            android:layout_weight="1.4"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:lines="1"
            android:textSize="16sp"
            android:text="Animal Name"
            android:gravity="center"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/animalAge"
            android:textColor="@color/black"
            android:layout_weight="1.8"
            android:textAlignment="center"
            android:maxLines="1"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:text="Animal Age"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/animalStatus"
            android:textColor="@color/black"
            android:layout_weight="1.3"
            android:maxLines="1"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Animal status"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dots"
            android:layout_weight="0.2"
            android:id="@+id/actionsBtn"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:background="@color/white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_8"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/animalItemLayout"
        android:layout_marginHorizontal="10dp"/>

</RelativeLayout>