<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Animal_Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animalNameLayout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/animalName"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/animalName"
            android:textSize="18sp"
            android:padding="8dp"
            android:id="@+id/animalNameTextView"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animalNameLayout"
        android:id="@+id/ageLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/animalName"
            android:textSize="18sp"
            android:padding="8dp"
            android:id="@+id/animalAgeTextView"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageLayout"
        android:id="@+id/breedLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/animalName"
            android:textSize="18sp"
            android:padding="8dp"
            android:id="@+id/animalBreedTextView"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breedLayout"
        android:id="@+id/statusLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/animalName"
            android:textSize="18sp"
            android:padding="8dp"
            android:id="@+id/animalStatusTextView"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Animal Profile"
        android:id="@+id/editAnimalProfileBtn"
        android:textSize="18sp"
        android:textColor="@color/animalCareBackground"
        android:layout_marginVertical="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_profile_bg"
        app:backgroundTint="@null"
        android:layout_below="@+id/statusLayout"
        android:layout_marginHorizontal="20dp"/>


</RelativeLayout>