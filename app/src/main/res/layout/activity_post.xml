<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/postAppBar"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/animalCareBackground"
            android:id="@+id/postToolBar"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/createForumPost"/>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postAppBar"
        android:layout_marginVertical="10dp"
        android:id="@+id/postActionsLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancelPostAction"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_close" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/postActionBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            app:backgroundTint="@null"
            android:background="@drawable/post_background"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postActionsLayout"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/ic_farmer" />

        <Spinner
            android:id="@+id/topicsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@color/accent"
            android:entries="@array/topic"
            android:padding="5dp"
            android:popupBackground="@color/accent" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/topicLayout"
        android:id="@+id/postMessageScrollView"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postMessageLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/postMessage"
            android:textSize="18sp"
            android:textColor="#292929"
            android:id="@+id/messageTxt"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="#636363"/>
        <ImageView
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:id="@+id/postImage"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/messageTxt"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/postImage"/>
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_attach_image"
            android:id="@+id/imageAttachImg"
            android:layout_marginHorizontal="10dp"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_video_insert"
            android:id="@+id/videoAttachImg"
            android:visibility="invisible"
            android:layout_marginHorizontal="10dp"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_audio"
            android:layout_weight="1"
            android:visibility="invisible"
            android:id="@+id/audioAttachImg"
            android:layout_marginHorizontal="10dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
  </RelativeLayout>