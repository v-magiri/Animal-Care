<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:id="@+id/rootLayout"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/chatItemLayout"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_farmer"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/clientProfilePicImageView"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/chatMessageLayout"
            android:layout_toEndOf="@+id/clientProfilePicImageView">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="6dp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="Name Appears Here"
                android:id="@+id/clientNameTextView"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Comment Appear Here"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/dark_grey"
                android:id="@+id/commentTextView"
                android:layout_weight="3"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_gravity="end"
                android:stepSize="1"
                android:progressTint="@color/animalCareBackground"
                style="?android:attr/ratingBarStyleIndicator"
                android:id="@+id/farmerRating"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>