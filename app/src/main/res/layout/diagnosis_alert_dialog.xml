<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Diagnosed Disease"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disease Name Appear Here"
                android:id="@+id/diseaseTxt"
                android:textAlignment="center"
                android:padding="5dp"
                android:textColor="@color/animalCareBackground"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/certaintyTxt"
                android:text="Certainity Factor Appeear Here"
                android:textColor="@color/animalCareBackground"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="5dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                android:text="Got It"
                android:textColor="@color/white"
                android:layout_marginVertical="15dp"
                android:id="@+id/okeyBtn"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>