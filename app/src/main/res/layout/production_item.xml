<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4.2"
        android:id="@+id/productionLayout"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/animalNameTxt"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_weight="1.3"
            android:padding="4dp"
            android:layout_gravity="center_vertical|center"
            android:text="Animal Name"
            android:maxLines="1"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/milkDateTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Milk Date"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="1.3"
            android:padding="4dp"
            android:maxLines="1"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/milkingTimeTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="4dp"
            android:text="Milk Time"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="1"
            android:maxLines="1"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantityTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical|center"
            android:padding="4dp"
            android:text="Quantity"
            android:layout_weight="0.4"
            android:maxLines="1"
            android:textAlignment="center"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dots"
            android:layout_weight="0.2"
            android:id="@+id/actionsBtn"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:background="@color/white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_8"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/productionLayout"
        android:layout_marginHorizontal="10dp"/>


</RelativeLayout>