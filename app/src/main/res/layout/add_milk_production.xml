<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="32dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/titleLayout"
                android:background="@color/animalCareBackground"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_close_white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/closeBtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/closeBtn"
                    android:textColor="@color/white"
                    android:text="@string/addMilk"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_below="@+id/titleLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Name"
                            android:textColor="@color/black"
                            android:padding="3dp"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextColor="#454545"
                            android:padding="8dp"
                            app:boxStrokeColor="@color/text_input_stroke_color"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="@string/animalName"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:id="@+id/animalNameTxt"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="@color/black"
                            android:padding="3dp"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextColor="#454545"
                            android:padding="8dp"
                            app:boxStrokeColor="@color/text_input_stroke_color"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:cursorVisible="false"
                                android:id="@+id/dateText"
                                android:drawableLeft="@drawable/ic_date"
                                android:drawablePadding="20dp"
                                android:text="@string/dayOfMonth"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:textSize="20sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Choose Milking Time"
                            android:textColor="@color/black"
                            android:padding="3dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textSize="20dp"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:drawableTop="@drawable/ic_morning"
                                android:text="Morning"
                                android:layout_marginHorizontal="5dp"
                                android:drawablePadding="10dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:background="@drawable/radio_selector"
                                android:textColor="@drawable/text_color"
                                android:layout_marginVertical="10dp"
                                android:button="@android:color/transparent"
                                android:id="@+id/morningBtn"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:drawableTop="@drawable/ic_noon"
                                android:text="Noon"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:background="@drawable/radio_selector"
                                android:textColor="@drawable/text_color"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="5dp"
                                android:drawablePadding="10dp"
                                android:button="@android:color/transparent"
                                android:id="@+id/noonBtn"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:drawableTop="@drawable/ic_evening"
                                android:text="Evening"
                                android:drawablePadding="10dp"
                                android:background="@drawable/radio_selector"
                                android:textColor="@drawable/text_color"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="5dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:button="@android:color/transparent"
                                android:id="@+id/eveningBtn"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:drawableTop="@drawable/ic_allday"
                                android:text="All Day"
                                android:layout_weight="1"
                                android:background="@drawable/radio_selector"
                                android:textColor="@drawable/text_color"
                                android:layout_marginVertical="10dp"
                                android:textAlignment="center"
                                android:drawablePadding="10dp"
                                android:layout_marginHorizontal="5dp"
                                android:button="@android:color/transparent"
                                android:id="@+id/allDayBtn"/>
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Milk Quantity (Kgs)"
                            android:textColor="@color/black"
                            android:padding="3dp"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Milk Quantity"
                            app:hintTextColor="#454545"
                            android:padding="8dp"
                            app:boxStrokeColor="@color/text_input_stroke_color"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:id="@+id/milkQuantityTxt"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="20sp"
                        android:text="@string/saveMilkProduction"
                        android:id="@+id/addMilkRecord"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>