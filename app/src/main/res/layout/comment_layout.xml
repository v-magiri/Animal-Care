<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publisherCommentLayout"
        android:layout_marginEnd="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_farmer"
            android:id="@+id/publisherProfilePic"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/publisherProfilePic"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView27"
                android:background="@drawable/bg_msg_from"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/publisherNameTxt"
                    android:textColor="@color/black"
                    android:text="Publisher Name"
                    android:paddingHorizontal="10dp"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:background="@drawable/bg_msg_from"/>
                <TextView
                    android:id="@+id/publisherCommentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_msg_from"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ff717171"
                    android:textSize="16sp"
                    android:text="Hello"
                    android:layout_marginEnd="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateText"
                    android:layout_gravity="end"
                    android:text="25-01-2012"
                    android:maxLines="1"
                    android:paddingHorizontal="5dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="#ff717171"/>


            </LinearLayout>
            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/triangle_msg_from"
                android:paddingEnd="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp" />

        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginStart="50dp"
            android:id="@+id/myCommentLayout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/yourChatArrow"
                android:background="@drawable/bg_msg_you">
                <TextView
                    android:id="@+id/myCommentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="Hello"
                    />
                <TextView
                    android:id="@+id/chatDateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingHorizontal="5dp"
                    android:text="25-01-2012"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginStart="5dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/yourChatArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/triangle_msg_you"
                android:paddingRight="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:layout_marginTop="3dp" />

        </RelativeLayout>
    </RelativeLayout>
