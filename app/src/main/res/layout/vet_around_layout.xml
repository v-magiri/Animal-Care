<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:id="@+id/vetDetailsLinearLayout">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_vet"
                android:layout_weight="1"
                android:id="@+id/vetProfilePic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/vetDetailsLayout"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/vetProfilePic">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vet Name Appear Here"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/vetNameTextView"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Visitation Fee:"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:id="@+id/visitationFeeTxt"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/vetVisitationFee"
                        android:textColor="@color/animalCareBackground"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_toEndOf="@+id/visitationFeeTxt"
                        android:text="KSH 100"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/forwardRelativeLayout"
                android:background="@drawable/imageview_background">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_forward"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/imageview_background"
                android:padding="3dp"
                android:id="@+id/forwardImageView"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vetDetailsLinearLayout"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/button_background"
                android:text="Consult"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/consultBtn"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/button_background"
                android:text="Invite"
                android:layout_weight="1"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:id="@+id/visitBtn"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>