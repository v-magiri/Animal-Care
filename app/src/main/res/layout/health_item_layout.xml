<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/record_item_bg"
        app:backgroundTint="@null"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row1Layout"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_item_bg"
                    app:backgroundTint="@null"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Treatment"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Treatment Appear Here"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:id="@+id/bullNameTextView"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_item_bg"
                    app:backgroundTint="@null"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Treatment Date"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:id="@+id/dateTextView"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row2layout"
                android:layout_below="@+id/row1Layout"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_item_bg"
                    app:backgroundTint="@null"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diagnosis"
                        android:textSize="18sp"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diagnosis Here"
                        android:textColor="@color/black"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:id="@+id/costTextView"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_item_bg"
                    app:backgroundTint="@null"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cost"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Treatment Date"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:id="@+id/treatmentCostTextView"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
