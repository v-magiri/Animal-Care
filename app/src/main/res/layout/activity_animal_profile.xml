<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalProfile">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animalProfileLayout">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:title="@string/animalProfile"
            android:id="@+id/animalProfileMaterialToolBar"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"/>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animalProfileLayout"
        android:id="@+id/animalImageLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:elevation="2dp"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/animal_name_layout"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/animalName"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/animalNameTextView"
                android:padding="10dp"
                android:text="Animal Name Appear Here"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/ic_vet"
            android:scaleType="fitCenter"
            android:id="@+id/animalImageView"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/animalImageLayout"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/simpleTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/light_grey"
            app:tabIndicatorColor="@color/animalCareBackground"
            app:tabSelectedTextColor="@color/animalCareBackground"
            app:tabTextColor="@color/black" />

        <FrameLayout
            android:id="@+id/simpleFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>